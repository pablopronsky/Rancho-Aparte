---
import Paragraph from '../../shared/Paragraph.astro';

export interface Props {
  title: string;
  description: string;
  icon: string;
  link?: boolean;
  linkUrl?: string;
}

const { title, description, icon, link = false, linkUrl = "#" } = Astro.props;
---

<div class="p-5 sm:p-6 lg:p-8 rounded-3xl border-box-border bg-box-bg shadow-lg shadow-box-shadow relative flex flex-col bg-light-background">
  <div class="rounded-2xl bg-purple-light p-3 w-max relative hover:animate-wiggle">
    <slot set:html={icon} />
  </div>
  <div class="mt-6 space-y-4 relative flex-grow ">
    <h2 class="text-2xl text-darker-text">{title}</h2>
    <Paragraph>{description}</Paragraph>
  </div>
  <div class="flex justify-end items-end mt-auto">
    {link && (
        <a
            href={linkUrl}
            class="text-purple-dark hover:underline animate-grow hover:scale-105"
        >
          <span aria-hidden="true" class="animate-grow">+</span> info
        </a>
    )}
  </div>
</div>
