---
import Paragraph from '../../shared/Paragraph.astro';

export interface Props {
  title: string;
  description: string;
  icon: string;
  link?: boolean;
  linkUrl?: string;
}

const { title, description, icon, link = false, linkUrl = "#" } = Astro.props;
---

<div class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative flex flex-col">
  <div class="rounded-xl bg-purple-light p-3 text-heading-1 w-max relative">
    <slot set:html={icon} />
  </div>
  <div class="mt-6 space-y-4 relative flex-grow">
    <h2 class="text-lg md:text-xl text-gray-700 font-semibold text-heading-2">{title}</h2>
    <Paragraph>{description}</Paragraph>
  </div>
  <div class="flex justify-end items-end mt-auto">
    {link && (
        <a
            href={linkUrl}
            class="text-sm font-bold text-orange-500 hover:underline animate-grow hover:scale-110"
        >
          <span aria-hidden="true" class="animate-grow">+</span> info
        </a>
    )}
  </div>
</div>
