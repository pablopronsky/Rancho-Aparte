---
import Paragraph from '../../shared/Paragraph.astro';

export interface Props {
  title: string;
  description: string;
  icon: string;
  link?: boolean; 
  linkUrl?: string;
}

const { title, description, icon, link = false, linkUrl = "#" } = Astro.props;
---

<div class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden">
  <div class="rounded-xl bg-purple-light p-3 text-heading-1 w-max relative">
    <slot set:html={icon} />
  </div>
  <div class="mt-6 space-y-4 relative">
    <h2 class="text-lg md:text-xl text-gray-700 font-semibold text-heading-2">{title}</h2>
    <Paragraph>{description}</Paragraph>
    <div class="flex justify-end" >
      {link && (
        <a href={linkUrl} class="text-sm font-thin text-gray-600 hover:underline leading-6">
         <span aria-hidden="true">+</span> info
       </a>
     )}
    </div>
  </div>
</div>